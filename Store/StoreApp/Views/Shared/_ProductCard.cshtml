@model Product

<div class="col-sm-12 col-md-4 my-3">
  <div class="card product-card border-0 shadow-sm h-100 position-relative overflow-hidden" style="transition: box-shadow 0.3s, transform 0.3s;">
    <div class="card-header text-center bg-gradient-primary text-white fw-bold fs-5 border-0" style="background: linear-gradient(90deg, #007bff 0%, #00c6ff 100%); letter-spacing:1px;">
      @Model?.ProductName
    </div>
    <img src="@Model?.ImageUrl" class="card-img-top p-3 rounded-4" alt="@Model?.ProductName" style="height:200px; object-fit:contain; background:#f8f9fa;">
    <div class="card-body d-flex flex-column justify-content-between">
      <div class="card-text mb-2">
        <div class="text-danger text-center lead p-2 rounded-2 fw-bold fs-4">
          @Model?.Price.ToString("C2")
        </div>
      </div>
      <p class="card-text text-muted small">@Model?.Summary</p>
      <div class="d-flex justify-content-center mt-3">
        <div class="btn btn-group">
          <a asp-controller="Product" asp-action="Get" asp-route-id="@Model?.ProductId" class="btn btn-outline-primary shadow-sm"><i class="fa-solid fa-arrow-right"></i></a>
          <form id="@Model?.ProductId" asp-page="/cart" method="post">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-primary mx-1 shadow-sm">
              <i class="fa fa-cart-plus"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Styles {
  <style>
    .product-card {
      border-radius: 1.5rem;
      box-shadow: 0 2px 16px rgba(0,123,255,0.08);
      transition: box-shadow 0.3s, transform 0.3s;
    }
    .product-card:hover {
      box-shadow: 0 8px 32px rgba(0,123,255,0.18);
      transform: translateY(-6px) scale(1.03);
      border: 1.5px solid #007bff33;
    }
    .card-header.bg-gradient-primary {
      background: linear-gradient(90deg, #007bff 0%, #00c6ff 100%) !important;
      color: #fff !important;
      border-top-left-radius: 1.5rem !important;
      border-top-right-radius: 1.5rem !important;
    }
    .btn-outline-primary {
      border-radius: 0.75rem;
      border-width: 2px;
    }
    .btn-primary {
      border-radius: 0.75rem;
      border-width: 2px;
    }
    .card-img-top {
      background: #f8f9fa;
    }
  </style>
}
