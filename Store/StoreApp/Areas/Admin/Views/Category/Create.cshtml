@model Category

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-center">
                        <i class="fas fa-plus me-2"></i>Yeni Kategori Ekle
                    </h3>
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="CategoryName" class="form-label fw-bold">Kategori Adı <span class="text-danger">*</span></label>
                            <input asp-for="CategoryName" class="form-control" required />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["CategoryName"]?.Errors.Count > 0)
                            {
                                <div class="alert alert-danger mt-2">
                                    @ViewData.ModelState["CategoryName"].Errors[0].ErrorMessage
                                </div>
                            }
                        </div>
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-check"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fa fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('form').on('submit', function() {
                var categoryName = $('#CategoryName').val();
                if (!categoryName || categoryName.trim() === '') {
                    alert('Lütfen kategori adını giriniz!');
                    return false;
                }
                return true;
            });
        });
    </script>
} 